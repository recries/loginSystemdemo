<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="account">

	<select id="all" resultType="dto.AccountDTO">
		select * from account
		order by num
		desc
	</select>

	<select id="one" resultType="dto.AccountDTO" parameterType="int">
		select * from account where num=#{num}
	</select>

	<select id="search" resultType="dto.AccountDTO" parameterType="dto.AccountDTO">
		select * from mem
		where num=#{num} and name=#{name}
	</select>

	<insert id="ins" parameterType="dto.AccountDTO">
		insert into mem
		values(mem_num_seq.nextval,#{name},#{age},#{loc})
	</insert>
	
	<update id="upt" parameterType="dto.AccountDTO">
	 update mem set  name=#{name},age=#{age}, loc=#{loc}
	  where num=#{num}
	</update>

    <delete id="del" parameterType="int">
	  delete from mem where num=#{num}
	</delete>
</mapper>   
















